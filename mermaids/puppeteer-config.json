{
    "executablePath": "/usr/bin/google-chrome",
    "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--disable-dev-shm-usage",
        "--no-first-run",
        "--no-zygote",
        "--single-process",
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor",
        "--force-device-scale-factor=2",
        "--high-dpi-support=1",
        "--force-color-profile=srgb"
    ]
}
